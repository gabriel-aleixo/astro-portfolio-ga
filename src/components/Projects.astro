---
const projects = [
    {
        title: "BIRCON Sessions App",
        description:
            "A scheduling web-app that let participants enroll for games sessions at the Berlin International RPG Conference",
        tech: ["Astro", "Supabase", "Postgres"],
        link: "https://github.com/yourusername/project-one",
    },
    {
        title: "Project Two",
        description: "An e-commerce platform using Next.js and Stripe",
        tech: ["Next.js", "Stripe", "Tailwind CSS"],
        link: "https://github.com/yourusername/project-two",
    },
    {
        title: "Financial Dashboard",
        description:
            "A proof of concept financial data dashboard modeled on the XXX API",
        tech: ["Next.js", "Prisma", "Redis"],
        link: "https://github.com/yourusername/project-three",
    },
];
---

<section class="projects">
    <h2>Recent Projects</h2>

    <div class="projects-grid">
        {
            projects.map((project) => (
                <article class="project-card">
                    <h3>{project.title}</h3>
                    <div class="tech-stack">
                        {project.tech.map((tech) => (
                            <span class="tech-tag">{tech}</span>
                        ))}
                    </div>
                    <p>{project.description}</p>
                    <a
                        href={project.link}
                        target="_blank"
                        rel="noopener noreferrer"
                    >
                        View Project â†’
                    </a>
                </article>
            ))
        }
    </div>
</section>

<style>
    .projects {
        margin-bottom: 4rem;
    }

    h2 {
        font-size: 1.75rem;
        margin-bottom: 1.75rem;
    }

    .projects-grid {
        display: grid;
        gap: 2rem;
    }

    .project-card {
        padding: 1.5rem;
        border-radius: 8px;
        background: var(--bg-secondary);
    }

    .tech-stack {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
        margin: 1rem 0;
    }

    .tech-tag {
        background: var(--bg-primary);
        padding: 0.25rem 0.75rem;
        border-radius: 15px;
        font-size: 0.9rem;
        color: var(--text-secondary);
    }

    .project-card a {
        display: inline-block;
        color: var(--accent);
        margin-top: 0.4em;
        text-decoration: none;
    }

    .project-card a:hover {
        text-decoration: underline;
    }

    @media (max-width: 768px) {
        .projects-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
