---
import Layout from "../../layouts/Layout.astro";
const posts = (await Astro.glob("./posts/*.md")).sort((a, b) => 
    new Date(b.frontmatter.date).getTime() - new Date(a.frontmatter.date).getTime()
);
---

<Layout title="Blog | Gabriel Aleixo">
    <section class="header">
        <h1>Blog</h1>
        <p class="subtitle">
            Notes and thoughts about projects, ideas, and personal interests
        </p>
    </section>

    <div class="posts">
        {
            posts.map((post) => (
                <article class="post-card">
                    <h2>{post.frontmatter.title}</h2>
                    <div class="post-meta">
                        <time>
                            {new Date(
                                post.frontmatter.date,
                            ).toLocaleDateString()}
                        </time>
                        · {post.frontmatter.readingTime || "5 min read"}
                    </div>
                    <p>{post.frontmatter.description}</p>
                    <div class="tags">
                        {post.frontmatter.tags.map((tag: any) => (
                            <span class="post-tag">{tag}</span>
                        ))}
                    </div>
                    <a href={post.url}>Read More →</a>
                </article>
            ))
        }
    </div>
</Layout>

<style>
    h1 {
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
    }

    .header p {
        color: var(--text-secondary);
        font-size: 1.25rem;
        font-weight: 400;
        margin-bottom: 2rem;
    }


    .posts {
        display: grid;
        gap: 2rem;
    }

    .post-card {
        padding: 1.5rem;
        border-radius: 8px;
        background: var(--bg-secondary);
    }

    .post-meta {
        color: var(--text-secondary);
        font-size: 0.9rem;
        margin: 0.5rem 0 1rem;
    }

    .tags {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
        margin: 1rem 0;
    }

    .post-tag {
        background: var(--bg-primary);
        padding: 0.25rem 0.75rem;
        border-radius: 15px;
        font-size: 0.9rem;
        color: var(--text-secondary);
    }

    .post-card a {
        display: inline-block;
        color: var(--accent);
        text-decoration: none;
    }

    .post-card a:hover {
        text-decoration: underline;
    }
</style>
