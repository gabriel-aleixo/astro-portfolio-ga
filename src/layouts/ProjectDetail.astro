---
import Layout from "./Layout.astro";
import { Image } from "astro:assets";

const { frontmatter } = Astro.props;

// Dynamically import all images
const allImages = import.meta.glob('/src/images/**/*.{jpeg,jpg,png,gif,webp,svg}');
const images = await Promise.all(
    frontmatter.images.map(async (imagePath) => {
        if (imagePath in allImages) {
            return allImages[imagePath]();
        }
        throw new Error(`Image ${imagePath} not found`);
    })
);
---

<Layout title={frontmatter.title}>
    <article class="project-detail">
        <header>
            <h1>{frontmatter.title}</h1>
        </header>
        {frontmatter.images && frontmatter.images.length > 0 && (
            <div class="image-carousel">
                <div class="carousel-container">
                    {images.map((imageModule, index) => (
                        <div class="carousel-slide" id={`slide-${index}`}>
                            <Image 
                                src={imageModule.default}
                                alt={`Project image ${index + 1}`}
                                width={720}
                                quality="max"
                                />
                        </div>
                    ))}
                </div>
                <div class="carousel-nav">
                    {frontmatter.images.map((_, index) => (
                        <a href={`#slide-${index}`} id={`nav-dot-${index}`} aria-label={`Go to slide ${index + 1}`} class="carousel-dot"></a>
                    ))}
                </div>
            </div>
        )}
        {frontmatter.link && (
            <div class="project-link">
                <a href={frontmatter.link} target="_blank" rel="noopener noreferrer">
                    View Project on GitHub â†—
                </a>
            </div>
        )}
        <div class="content">
            <slot />
        </div>
        
    </article>
</Layout>

<style>
    .project-detail {
        max-width: 720px;
        margin: 0 auto;
    }

    header {
        margin-bottom: 2rem;
    }

    h1 {
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
    }

    .post-meta {
        color: var(--text-secondary);
    }

    .content {
        line-height: 1.7;
    }

    .content :global(h2) {
        font-size: 1.8rem;
        margin: 2rem 0 1rem;
    }

    .content :global(p) {
        margin-bottom: 1.5rem;
    }

    .content :global(ul) {
        margin: 1rem 0;
        padding-left: 1.5rem;
    }

    .content :global(li) {
        margin: 0.5rem 0;
    }

    .image-carousel {
        margin-top: 3rem;
        width: 100%;
        overflow: hidden;
    }

    .carousel-container {
        display: flex;
        scroll-behavior: smooth;
        scroll-snap-type: x mandatory;
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
    }

    .carousel-slide {
        flex: 0 0 100%;
        scroll-snap-align: start;
    }

    .carousel-slide img {
        width: 100%;
        height: auto;
        object-fit: cover;
    }

    .carousel-nav {
        display: flex;
        justify-content: center;
        gap: 0.5rem;
        margin-top: 1rem;
    }

    @media (max-width: 768px) {
        .carousel-nav {
            display: none;
        }
    }

    .carousel-dot {
        width: 10px;
        height: 10px;
        border-radius: 50%;
        background-color: var(--text-secondary);
        opacity: 0.5;
        transition: opacity 0.3s;
    }

    .carousel-dot:hover,
    .carousel-dot:target {
        opacity: 1;
    }

    .project-link a {
        display: inline-block;
        color: var(--accent);
        text-decoration: none;
    }

    .project-link a:hover {
        text-decoration: underline;
    }
</style>
