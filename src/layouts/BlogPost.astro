---
import Layout from './Layout.astro';

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
	<article class="blog-post">
		<header>
			<h1>{frontmatter.title}</h1>
			<div class="post-meta">
				<time>{new Date(frontmatter.date).toLocaleDateString()}</time>
				Â· {frontmatter.readingTime}
			</div>
		</header>
		<div class="content">
			<slot />
		</div>
	</article>
</Layout>

<style>
	.blog-post {
		max-width: 720px;
		margin: 0 auto;
	}

	header {
		margin-bottom: 2rem;
	}

	h1 {
		font-size: 2.5rem;
		margin-bottom: 0.5rem;
	}

	.post-meta {
		color: var(--text-secondary);
	}

	.content {
		line-height: 1.7;
	}

	.content :global(h2) {
		font-size: 1.8rem;
		margin: 2rem 0 1rem;
	}

	.content :global(p) {
		margin-bottom: 1.5rem;
	}

	.content :global(ul) {
		margin: 1rem 0;
		padding-left: 1.5rem;
	}

	.content :global(li) {
		margin: 0.5rem 0;
	}
</style>