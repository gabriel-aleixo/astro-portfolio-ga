---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Developer portfolio and blog" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<nav>
			<div class="nav-container">
				<a href="/" class="logo">JD</a>
				<div class="nav-links">
					<a href="/">Home</a>
					<a href="/projects">Projects</a>
					<a href="/blog">Blog</a>
					<a href="/contact">Contact</a>
				</div>
			</div>
		</nav>
		<main>
			<slot />
		</main>
		<footer>
			<p>&copy; {new Date().getFullYear()} John Doe. All rights reserved.</p>
		</footer>
	</body>
</html>
<style is:global>
	:root {
		--text-primary: #2d3748;
		--text-secondary: #4a5568;
		--bg-primary: #ffffff;
		--bg-secondary: #f7fafc;
		--accent: #667eea;
	}
	
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html {
		font-family: system-ui, -apple-system, sans-serif;
		background: var(--bg-primary);
		color: var(--text-primary);
	}

	body {
		max-width: 900px;
		margin: 0 auto;
		padding: 2rem;
	}

	nav {
		margin-bottom: 2rem;
	}

	.nav-container {
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.nav-links {
		display: flex;
		gap: 1.5rem;
	}

	.nav-links a {
		color: var(--text-secondary);
		text-decoration: none;
		font-weight: 500;
	}

	.nav-links a:hover {
		color: var(--accent);
	}

	.logo {
		font-size: 1.5rem;
		font-weight: bold;
		color: var(--text-primary);
		text-decoration: none;
	}

	main {
		min-height: calc(100vh - 200px);
	}

	footer {
		margin-top: 4rem;
		padding: 2rem 0;
		text-align: center;
		color: var(--text-secondary);
	}
</style>