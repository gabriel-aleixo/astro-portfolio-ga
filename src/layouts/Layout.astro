---
interface Props {
    title: string;
}

const { title } = Astro.props;
import logoSvg from "../images/Logo.svg";
import { Image } from "astro:assets";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content="Gabriel Aleixo | Software Developer Portfolio and Blog"
        />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <!-- Add Google Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Anton+SC&family=Host+Grotesk:ital,wght@0,300..800;1,300..800&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
            rel="stylesheet"
        />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <nav>
            <div class="nav-container">
                <a href="/" class="logo">ga</a>
                <div class="nav-links">
                    <a href="/">Home</a>
                    <a href="/consulting">Consulting</a>
                    <a href="/projects">Projects</a>
                    <a href="/blog">Blog</a>
                    <a href="/contact">Contact</a>
                </div>
            </div>
        </nav>
        <main>
            <slot />
        </main>
        <footer>
            <p>
                &copy; {new Date().getFullYear()} Gabriel Aleixo. All rights reserved.
            </p>
        </footer>
    </body>
</html>
<style is:global>
    :root {
        --text-primary: #2d3748;
        --text-secondary: #4a5568;
        --bg-primary: #ffffff;
        --bg-secondary: #f7f7f7;
        --accent: #794ec4;
        --font-title: "Host Grotesk", sans-serif;
        --font-headlines: "Yaro Bold", sans-serif;
        --font-body: "Host Grotesk", sans-serif;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        text-align: left;
    }

    html {
        font-family: var(--font-body);
        background: var(--bg-primary);
        color: var(--text-primary);
    }

    body {
        max-width: 900px;
        margin: 0 auto;
        padding: 2rem;
        font-family: var(--font-body);
    }

    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
        font-family: var(--font-headlines);
        font-weight: normal;
    }

    nav {
        margin-bottom: 4rem;
    }

    .nav-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .nav-links {
        display: flex;
        gap: 1.5rem;
    }

    .nav-links a {
        color: var(--text-secondary);
        text-decoration: none;
        font-weight: 500;
        font-family: var(--font-body);
    }

    .nav-links a:hover {
        color: var(--accent);
    }

    .logo {
        font-family: var(--font-headlines);
        color: var(--text-secondary);
        font-size: 1.5rem;
        font-weight: bold;
        color: var(--text-primary);
        text-decoration: none;
    }

    main {
        min-height: calc(100vh - 200px);
    }

    section {
        margin-bottom: 4rem;
    }

    footer {
        margin-top: 4rem;
        padding: 2rem 0;
        color: var(--text-secondary);
    }

    p {
        font-family: var(--font-body);
        line-height: 1.4em;
        margin-bottom: 0.6em;
    }

    @font-face {
        font-family: "Yaro Bold";
        src:
            url("/fonts/yaro-bold.woff2") format("woff2"),
            url("/fonts/yaro-bold.woff") format("woff");
    }

    /* Add media query for smaller screens */
    @media (max-width: 490px) {
        .nav-links {
            gap: 0.75rem; /* Reduce gap between nav items */
        }
        
        .nav-links a {
            font-size: 0.9rem; /* Reduce font size */
        }

        .logo {
            font-size: 1.2rem; /* Slightly reduce logo size */
        }
    }
    @media (max-width: 390px) {
        .nav-links {
            gap: 0.70rem; /* Reduce gap between nav items */
        }
        
        .nav-links a {
            font-size: 0.8rem; /* Reduce font size */
        }

        .logo {
            font-size: 1rem; /* Slightly reduce logo size */
        }
    }

</style>
